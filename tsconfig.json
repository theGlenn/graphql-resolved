{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "esnext", "dom", "es6"
    ],
    "types": [
      "mocha"
    ],
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "exclude": [
    "./test",
    "./dist", 
    "./node_modules",
    "./src/**/*.spec.ts",
    "./src/**/*.check.ts"
    ]
}
